<h1>Editing circle</h1>

<% form_for(@circle, {:url => {:action => :update}, :html => {:multipart => true}}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :alias %><br />
    <%= f.text_field :alias %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.label :mail %><br />
    <%= f.text_area :mail %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', {:action => "show", :alias => @circle.alias} %> |
<%= link_to 'Back', circles_path %>